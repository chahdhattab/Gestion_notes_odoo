<?xml version="1.0"?>
<odoo>
<!-- vue tree liste des étudiants-->
<record id="view_etudiant_tree" model="ir.ui.view">
    <field name="name">gestion.etudiant.tree</field>
    <field name="model">gestion.etudiant</field>
    <field name="arch" type="xml">
        <tree string="Étudiants">
            <field name="name"/>
            <field name="num_apogee"/>
            <field name="email"/>
            <field name="filiere_id"/>
        </tree>
    </field>
</record>
<!--Vue form (Formulaire détaillé de l'étudiant)-->
<record id="view_etudiant_form" model="ir.ui.view">
    <field name="name">gestion.etudiant.form</field>
    <field name="model">gestion.etudiant</field>
    <field name="arch" type="xml">
        <form string="Étudiant">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="num_apogee"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="date_naissance"/>
                    <field name="adresse"/>
                    <field name="filiere_id"/>
                </group>
            </sheet>
        </form>
    </field>
</record>
<!--Vue kanban (Vue Kanban des étudiants)-->
<record id="view_etudiant_kanban" model="ir.ui.view">
    <field name="name">gestion.etudiant.kanban</field>
    <field name="model">gestion.etudiant</field>
    <field name="arch" type="xml">
        <kanban string="Étudiants">
            <field name="name"/>
            <field name="filiere_id"/>
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click">
                        <div class="o_kanban_record_title">
                            <strong><field name="name"/></strong>
                        </div>
                        <div>
                            <span>Filière: <field name="filiere_id"/></span>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

<record id="view_module_tree" model="ir.ui.view">
    <field name="name">gestion.module.tree</field>
    <field name="model">gestion.module</field>
    <field name="arch" type="xml">
        <tree string="Modules">
            <field name="name"/>
            <field name="code"/>
            <field name="coefficient"/>
            <field name="semestre"/>
            <field name="enseignant_id"/>
            <field name="filiere_id"/>
        </tree>
    </field>
</record>
<record id="view_module_form" model="ir.ui.view">
    <field name="name">gestion.module.form</field>
    <field name="model">gestion.module</field>
    <field name="arch" type="xml">
        <form string="Module">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="coefficient"/>
                    <field name="semestre"/>
                    <field name="enseignant_id"/>
                    <field name="filiere_id"/>
                </group>
                <notebook>
                    <page string="Notes des Étudiants">
                        <field name="note_ids">
                            <tree>
                                <field name="etudiant_id"/>
                                <field name="note"/>
                                <field name="date_examen"/>
                                <field name="observation"/>
                                <field name="etat"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>
</odoo>